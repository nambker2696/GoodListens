<div class="song_index">
  <div class="song_element">
    <div id="song_cover_img">
        <% if singer.avatar? %>
        <%= image_tag singer.avatar, size: "130x130" %>
        <% else %>
        <%= image_tag singer.avatar.default_url("ava-default-male.jpg"),size: "130x130" %>
        <% end %>
    </div>
    <div class="info-singer-container">
      <%= link_to singer do %>
      <%= @text ="<h4>#{singer.name}</h4>".html_safe %>
      <% end %>
      <h5>
        <strong><%= t "app.singer.age" %></strong>
        <%= singer.age %>
      </h5>
      <h5>
        <strong><%= t "app.singer.gender" %></strong>
        <%= singer.gender %>
      </h5>
      <br><br>
    </div>
  </div>
</div>
