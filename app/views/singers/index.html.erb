<div class="row content-song">
  <div class="col-md-12">
    <div class="search-tool">
      <%= form_tag search_singers_path, method: :get do %>
      <div class="search-group" id="search-tool">
        <%= text_field_tag :keyword, params[:key_word],
        class: "form-control", value: params[:keyword],
         placeholder: t("app.shared.search") %>
         <%= button_tag type: "submit", class: "search-btn",
         name: nil do %>
         <span class="glyphicon glyphicon-search"></span>
         <% end %>
       </div>
       <% end %>
     </div>
   </div>
   <div class="col-md-9">
    <% if @singers.any? %>
    <%= render @singers %>
    <%= will_paginate @singers, inner_window: 1, outer_window: 2 %>
    <% else %>
    <%= @text ="<h2 style = 'clear: both'>Singer isn't available</h2>".html_safe %>
    <% end %>
  </div>
  <div class="col-sm-3 sidenav tab-song" style="float: right;">
    <div class="title-content" style="background: #fff">
      <ul class="data-list ">
        <li class="active">
        <h4><a href="#"><%= t "app.singer.singer_like" %></a></h4>
        </li>
      </ul>
    </div>
    <div class="tabbable-panel" style="height: 700px;">
      <div class="tabbable-line" style="background: #36a45963;">
        <div class="tab">
          <a href="#tab_default_1" data-toggle="tab"><div class="text"><%= t "app.singer.viet_nam" %></div></a>
          <a href="#tab_default_2" data-toggle="tab">
          <div class="text"><%= t "app.singer.ua_uk" %></div></a>
          <a href="#tab_default_3" data-toggle="tab"><div class="text"><%= t "app.singer.japan" %></div></a>
        </div>

        <div class="tab-content">
          <div class="tab-pane active" id="tab_default_1">
            <ul class="list-group">
              <% if @top_ten_vn %>
              <% count = 0 %>
              <% @top_ten_vn.each do |top_vn| %> 

              <li class="list-group-item">
                <div class="info-song">
                  <span class="rank fn-order"><%= count = count+1 %></span>
                  <h3 class="song-name ellipsis">
                    <%= link_to top_vn do %>
                      <%= @text ="#{top_vn.name}".html_safe %>
                    <% end %>
                  </h3>
                  <h4 class="singer-name ellipsis"><a href="#">
                   999 quan tam
                 </a></h4>
               </div>
             </li>
             <% end %>
             <% end %>

           </ul>
         </div>
         <div class="tab-pane" id="tab_default_2">
          <ul class="list-group">
            <% if @top_ten_en %>
            <% count = 0 %>
            <% @top_ten_en.each do |top_en| %> 

            <li class="list-group-item">
              <div class="info-song">
                <span class="rank fn-order"><%= count = count+1 %></span>
                <h3 class="song-name ellipsis">
                  <%= link_to top_en do %>
                      <%= @text ="#{top_en.name}".html_safe %>
                    <% end %>
                </h3>
                <h4 class="singer-name ellipsis"><a href="#">
                 999 quan tam
               </a></h4>
             </div>
           </li>
           <% end %>
           <% end %>
         </ul>
       </div>
       <div class="tab-pane" id="tab_default_3">
        <ul class="list-group">
          <% if @top_ten_ja %>
          <% count = 0 %>
          <% @top_ten_ja.each do |top_ja| %> 

          <li class="list-group-item">
            <div class="info-song">
              <span class="rank fn-order"><%= count = count+1 %></span>
              <h3 class="song-name ellipsis">
                <%= link_to top_ja do %>
                  <%= @text ="#{top_ja.name}".html_safe %>
                <% end %>
              </h3>
              <h4 class="singer-name ellipsis"><a href="#">
               999 quan tam
             </a></h4>
           </div>
         </li>
         <% end %>
         <% end %>
       </ul>
     </div>
   </div>
 </div>
</div>
</div>
</div>
