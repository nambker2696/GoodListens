<p id="notice"><%= notice %></p>

<h1>Album Likes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album_likes.each do |album_like| %>
      <tr>
        <td><%= album_like.user_id %></td>
        <td><%= album_like.album_id %></td>
        <td><%= link_to 'Show', album_like %></td>
        <td><%= link_to 'Edit', edit_album_like_path(album_like) %></td>
        <td><%= link_to 'Destroy', album_like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album Like', new_album_like_path %>
