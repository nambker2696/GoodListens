<div class="authen-box">
  <h2><%= t "app.authen.login" %></h2>

  <div class="content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% unless devise_error_messages!.empty? %>
        <% flash[:error] = devise_error_messages! %>
      <% end %>      
      <div class="field">
        <%= f.label :email, t("app.user.email_label") %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, t("app.user.password_label") %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t("app.authen.remember_me") %>
        </div>
      <% end %>

      <div class="redirect-to-link">
        <%= render "users/shared/links" %>
      </div>

      <div class="actions">
        <%= f.submit t("app.authen.login") %>
      </div>
    <% end %>
  </div>
</div>
